{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/hawxj2003/FIT3179/refs/heads/main/Week10Homework/bubble.csv"},
  "width": 800,
  "height": 500,    
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Country", "equal": "Afghanistan"}},
        {"filter": {"param": "year_select"}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 250,
        "opacity": 0.2
      },
      "encoding": {"text": {"field": "Year"}}
    },

    {
      "encoding": {
        "x": {
          "field": "Both(Obesity)",
          "type": "quantitative",
          "axis": {"tickCount": 5, "title": "Obesity Prevalence", "titleFontSize":15}

        },
        "y": {
          "field": "Both(Overweight)",
          "type": "quantitative",
          "axis": {"tickCount": 5, "title": "Overweight Prevalence", "titleFontSize":15}

        }
      },
      
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {"field": "Country"},
            "order": {"field": "Year"},
            "opacity": {
              "condition": {
                "test": {"or": [
                  {"param": "hovered", "empty": false},
                  {"param": "clicked", "empty": false}
                ]},
                "value": 0.8
              },
              "value": 0
            }
          }
        },

        {
          "params": [
            {
              "name": "year_select",
              "value": [{"Year": 2022}],
              "select": {
                "type": "point",
                "fields": ["Year"]
              },
              "bind": {
                "name": "Year: ",
                "input": "range",
                "min": 1990, "max": 2022, "step": 1
              }
            },
            {
              "name": "continent_selection",
              "select": {"type":"point", "fields":["Region"]},
              "bind": {
                "input": "select",
                "options": [
                  null,
                  "Africa",
                  "Americas",
                  "Eastern Mediterranean",
                  "Europe",
                  "South-East Asia",
                  "Western Pacific"
                ],
                "labels":[
                  "Show All",
                  "Africa",
                  "Americas",
                  "Eastern Mediterranean",
                  "Europe",
                  "South-East Asia",
                  "Western Pacific"
                ],
                "name": "Region: "
              }
            },
            {
              "name": "hovered",
              "select": {
                "type": "point",
                "fields": ["Country"],
                "toggle": false,
                "on": "mouseover"
              }
            },
            {
              "name": "clicked",
              "select": {"type": "point", "fields": ["Country"]}
            }
          ],

          "transform": [
            {"filter": {"param": "year_select"}}
            ],
          
          "mark": {
            "type": "circle", 
            "size": 100
          },
          "encoding": {
            "stroke": {
              "condition": {
                "test": {"or": [
                  {"param": "hovered", "empty": false},
                  {"param": "clicked", "empty": false}
                ]},
                "value": "black"
              },
              "value": null
            },
            "fillOpacity": {
              "condition": {"param": "clicked", "value": 1},
              "value": 0.3
            },
            "opacity":{
              "condition":{"param":"continent_selection", "value": 0.5},
              "value":0
            },
            "size":{
              "field": "Population",
              "type": "quantitative",
              "title":"Population Size",
              "scale": {
                "type": "threshold",
                "domain": [1000000, 10000000, 50000000, 100000000],
                "range": [50, 100, 200, 400, 800]
              },
              "legend": {
                "format": ".1s",
                "orient": "none",
                "legendX": 670,
                "legendY": 370,
                "fillColor":"white"
              }
            },
            "color": {
              "field": "Region",
              "title": "Region",
              "scale": {
                "range":["#D81B60","#1E88E5","#FFC107","#1BCAD8","#FF7300","#9467BD"]
              },
              "legend":{
                "orient": "none",
                "legendX": 670,
                "legendY": 260,
                "fillColor":"white"
              }
            },
            "tooltip":[
              {"field":"Country", "title":"Country"},
              {"field":"Both(Overweight)","type": "quantitative", "title":"Overweight Prevalence"},
              {"field":"Both(Obesity)","type": "quantitative", "title":"Obesity Prevalence"}
              ]
          }
        },

        {
          "transform": [
            {"filter": {"param": "year_select"}}
          ],

          "encoding": {
            "text": {"field": "Country"},
            "color": {"value": "black"}
          },

          "layer": [
              {
                  "mark": {
                    "type": "text",
                    "yOffset": -12,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'Malaysia'", "value": "Malaysia"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -12,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'Australia'", "value": "Australia"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -12,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'Mexico'", "value": "Mexico"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -10,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'France'", "value": "France"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -10,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'Iran'", "value": "Iran"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -10,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'South Africa'", "value": "South Africa"
                          }
                      }
                  }
              },

              {
                  "mark": {
                    "type": "text",
                    "yOffset": -10,
                    "fontSize": 12,
                    "fontWeight": "bold"
                  },

                  "encoding": {
                      "fillOpacity": {
                        "condition": {"param": "clicked", "value": 1},
                        "value": 0.3
                        },
                      "opacity":{
                        "condition":{"param":"continent_selection", "value": 1},
                        "value":0
                        },
                      "text":{
                          "condition":{
                              "test": "datum['Country'] === 'North Korea'", "value": "North Korea"
                          }
                      }
                  }
              }
          ]
        },

        {
          "transform": [
            {"filter": {"param": "hovered", "empty": false}},
            {"filter": {"not": {"param": "year_select"}}}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -8,
                "fontSize": 9,
                "color": "gray"
              },
              "encoding": {"text": {"condition":{"test": "datum['Year'] === 2022", "value": "2022"}}}
            },
            {
              "mark": {
                "type": "text",
                "yOffset": -8,
                "fontSize": 9,
                "color": "gray"
              },
              "encoding": {"text": {"condition":{"test": "datum['Year'] === 1990", "value": "1990"}}}
            },
            {"mark": {"type": "circle", "color": "gray", "opacity":0.3}}
          ]
        }
      ]
    }
  ]
}