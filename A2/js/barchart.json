{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 500,
  "width": 800,
  "data": {
    "url": "https://raw.githubusercontent.com/hawxj2003/FIT3179/refs/heads/main/A2/data/risk_factors.csv"
  },
  "transform": [
    {
      "filter": "datum.Year === 2021"
    }
  ],
  "encoding": {
    "y": {
      "field": "Deaths by Risk Factor",
      "type": "nominal",
      "title": "Risk Factors"
    },
    "x": {
      "field": "Estimated Deaths (per 100,000)",
      "type": "quantitative",
      "title": "Number of Deaths"
    },
    "tooltip": [
      {
        "field": "Deaths by Risk Factor",
        "type": "nominal",
        "title": "Risk Factor"
      },
      {
        "field": "Estimated Deaths (per 100,000)",
        "type": "quantitative",
        "title": "Number of Deaths"
      }
    ]
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {
          "condition": {
            "test": "datum['Deaths by Risk Factor'] === 'Obesity'",  
            "value": "red"  
          },
          "value": "steelblue"  
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 4
      },
      "encoding": {
        "text": {
          "field": "Estimated Deaths (per 100,000)",
          "type": "quantitative",
          "format": ".0f"
        },
        "color": { "value": "black" }
      }
    }
  ]
}
