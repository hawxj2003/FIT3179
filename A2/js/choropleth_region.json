{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 640,
    "height": 480,
    "params": [
        {
            "name": "rotateX",
            "value": 0,
            "bind":{
                "input": "range",
                "min": -180,
                "max": 180,
                "step": 5,
                "name": "Rotation X:"
            }
        },

        {
            "name": "rotateY",
            "value": 0,
            "bind":{
                "input": "range",
                "min": -180,
                "max": 180,
                "step": 5,
                "name": "Rotation Y:"
            }
        },

        {
            "name": "rotate",
            "expr": "[rotateX, rotateY]"
        }
    ],
    "projection": {
        "type": "orthographic",
        "rotate": {"expr": "rotate"}
    },
    "layer":[
        {
            "data": {
                "graticule": true
            },
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.1
            }
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/hawxj2003/FIT3179/refs/heads/main/A2/data/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson", 
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape", 
                "fill": "lightgray"
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
            }],
            "encoding": {
                "tooltip":{ "field": "note" }
            }
        },
      
        {
            "params": [
                {
                    "name": "continent_selection",
                    "select": {"type":"point", "fields":["Region"]},
                    "bind": {
                    "input": "select",
                    "options": [
                        null,
                        "Africa",
                        "Americas",
                        "Eastern Mediterranean",
                        "Europe",
                        "South-East Asia",
                        "Western Pacific"
                    ],
                    "labels":[
                        "Show All",
                        "Africa",
                        "Americas",
                        "Eastern Mediterranean",
                        "Europe",
                        "South-East Asia",
                        "Western Pacific"
                    ],
                    "name": "Region: "
                    }
                },
                {
                    "name": "highlight",
                    "select": {
                      "type": "point", 
                      "on": "mouseover"}
                }
            ],

            "data": {
                      "url": "https://raw.githubusercontent.com/hawxj2003/FIT3179/refs/heads/main/A2/data/country-region.csv"
            },
            "transform": [
                {
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/hawxj2003/FIT3179/refs/heads/main/A2/data/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black"
            },
            "encoding": {
                "shape":{
                    "field": "geo", 
                    "type": "geojson"
                },
                "color": {
                    "field": "Region",
                    "type": "nominal",
                    "title": "Region",
                    "scale": {
                        "range": ["#D81B60","#FF7300","#FFC107", "#1BCAD8","#1E88E5","#9467BD"]
                    },
                    "legend": {
                        "direction": "vertical", 
                        "orient": "none", 
                        "legendX": 0, 
                        "legendY": 350
                    }
                },
                "opacity": {
                    "condition": {"param":"continent_selection", "value": 1},
                    "value":0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal", "title": "Country"},
                    {"field": "Region", "type": "nominal", "title":"Region"}
                ],
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 2
                        }
                    ],
                    "value": 0
                }
            }  
        }
    ]
}
